@model MedicalCenterRegistration.ViewModels.DoctorSpecializationCreateViewModel

@{
    ViewData["Title"] = "Create Doctor Specialization";
}

<h1>Dodaj specjalizację lekarzowi</h1>
<hr />

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="DoctorId" class="control-label"></label>
        <select asp-for="DoctorId" class="form-control" asp-items="Model.Doctor">
            <option value="">-- wybierz lekarza --</option>
        </select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SpecializationId" class="control-label"></label>
        <select asp-for="SpecializationId" class="form-control" asp-items="Model.Specialization">
            <option value="">-- wybierz specjalizację --</option>
        </select>
        <span asp-validation-for="SpecializationId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Powrót</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
